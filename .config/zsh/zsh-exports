export EDITOR=nvim
export VISUAL=code
export TERM=xterm-256color #??

export ANDROID_SDK="$HOME/Android/Sdk"
export GOPATH="$HOME/go"

export PATH="$HOME/.local/bin":$PATH
export PATH="$HOME/flutter/bin":$PATH
export PATH="$ANDROID_SDK/tools":$PATH
export PATH="$ANDROID_SDK/tools/bin":$PATH
export PATH="$ANDROID_SDK/platform-tools":$PATH
export PATH="$ANDROID_SDK/emulator":$PATH
export PATH="$ANDROID_SDK/tools/bin/sdkmanager":$PATH
export PATH="$HOME/.cargo/bin":$PATH
export PATH=$GOPATH:$PATH
export PATH="$GOPATH/bin":$PATH

export MANPAGER="sh -c 'col -bx | bat --color=always --decorations=always --tabs=2 -l man -p'"
export MANWIDTH=999

export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

export LSCOLORS="Gxfxcxdxbxegedabagacad"

## History file configuration
export HISTFILE=$HOME/.zsh_history
export HISTSIZE=50000
export SAVEHIST=10000
setopt INC_APPEND_HISTORY
setopt HIST_IGNORE_ALL_DUPS
setopt HIST_IGNORE_SPACE # if the command starts with a space it wont be saved in the history
